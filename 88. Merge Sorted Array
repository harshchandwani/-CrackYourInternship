class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
       //using 2 pointer approach 
        //we will  be adding lager element from the both arrays first then others
        int p1= m-1, p2 = n-1, i= n+m-1;
        while(p2 >= 0){
            if(p1 >= 0 && nums2[p2] < nums1[p1] ){
                nums1[i--] = nums1[p1--];
            }
            else{
                nums1[i--] = nums2[p2--];
            }
        }
    }
};
